.index-container {
  height: 100%;
}
.index-container .top {
  position: -webkit-sticky;
  position: sticky;
  padding: 0 30rpx;
}
.index-container .top .search {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index-container .top .search image {
  width: 144rpx;
  height: 40rpx;
}
.index-container .top .nav {
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.index-container .top .nav .scroll {
  height: 60rpx;
  display: flex;
  white-space: nowrap;
}
.index-container .top .nav .scroll .item {
  margin-right: 40rpx;
  box-sizing: border-box;
}
.index-container .top .nav .scroll .item.active {
  border-bottom: 2px solid #9473ef;
}
.index-container .bottom {
  height: calc(100vh-83);
}
.index-container .bottom .imagelist .item image {
  width: 100%;
  height: 100%;
}
.index-container .bottom .inner {
  margin-top: 16rpx;
  padding: 0 30rpx;
}
.index-container .bottom .inner .inner-list {
  display: flex;
  font-size: 28rpx;
  justify-content: space-around;
}
.index-container .bottom .goods {
  display: flex;
  flex-wrap: wrap;
}
.index-container .bottom .goods .outer {
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-left: 40rpx;
}
.index-container .bottom .goods .outer .good-img image {
  margin-top: 20rpx;
  width: 102rpx;
  height: 102rpx;
  border-radius: 40rpx;
}
.index-container .category-goods {
  margin-top: 40rpx;
  background-color: pink;
}
.index-container .category-goods .goods {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.index-container .category-goods .goods .title {
  width: 100%;
  text-align: center;
}
.index-container .category-goods .goods .title .name {
  font-size: 28rpx;
  color: darkgrey;
}
.index-container .category-goods .goods .outers {
  margin-left: 16rpx;
}
.index-container .category-goods .goods .outers image {
  margin-top: 20rpx;
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.index-container .category-goods .goods .text {
  width: 350rpx;
}
.index-container .category-goods .goods .price {
  color: #fa5a38;
}

